            <item android:right="6dp" android:top="2dp">
                <shape>
                    <corners android:radius="5dp" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>

            <item android:bottom="3dp" android:right="7dp">
                <shape>
                    <gradient android:angle="270"
