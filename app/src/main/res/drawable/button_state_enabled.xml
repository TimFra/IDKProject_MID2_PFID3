<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>

            <item android:right="4dp" android:top="3dp">
                <shape>
                    <corners android:radius="15dp" />
                    <solid android:color="#555555" />
                </shape>
            </item>

            <item android:bottom="3dp" android:right="7dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="@color/dark_grey" android:startColor="@color/light_grey"/>

                    <corners android:radius="15dp" />

                    <padding android:bottom="13dp" android:left="10dp"
                        android:right="14dp" android:top="10dp" />

                    <size android:height="50dp"
                        android:width="100dp"/>
                </shape>
            </item>

        </layer-list>
    </item>

</selector>